{
  "compilerOptions": {
    "target": "es2017",
    "strict": true,
    "preserveConstEnums": true,
    "noEmit": true,
    "sourceMap": true,
    "module":"commonjs",
    "moduleResolution":"node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": false,
  },
  "exclude": [
    "node_modules",
    "**/*.test.ts"]
}
